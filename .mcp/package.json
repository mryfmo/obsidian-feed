    "@types/eslint": "^9.6.1",
    "@types/node": "^20.0.0",
    "@types/turndown": "^5.0.4",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.55.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^3.1.4"
  }
}
