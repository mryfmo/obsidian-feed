{
	"name": "obsidian-contents-feeds-reader",
	"version": "0.0.3",
	"description": "Obsidian plugin to read RSS/Atom, YouTube, Podcasts, etc.",
	"main": "main.js",

	"keywords": ["obsidian-plugin", "rss", "feeds", "reader", "podcast", "youtube"],
	"author": "mryfmo",
	"license": "GPL-3.0-or-later",
	"scripts": {
		"dev": "node esbuild.config.mjs", 
		"build": "tsc --noEmit --skipLibCheck && node esbuild.config.mjs production",
    	"test": "vitest", 
    	"test:unit": "vitest run --reporter=dot tests/unit",
		"test:int": "vitest run --reporter=dot tests/integration",
		"e2e": "playwright test", 
	    "lint": "eslint .",
		"clean": "rimraf dist",
		"prebuild": "pnpm run clean",
		"check-deps": "depcheck",
		"postinstall": "pnpm run check-deps"
    },

	"dependencies": {
		"zod": "^3.24.4",
		"date-fns": "^3.6.0",
		"axios": "^1.7.2",
		"rss-parser": "^3.13.0",
		"cheerio": "^1.0.0-rc.12",
		"minizlib": "^3.0.2",
		"obsidian": "1.8.7"
	},

	"devDependencies": {
		"@eslint/js": "^9.26.0",
		"@types/node": "^22.15.0",
		"@typescript-eslint/eslint-plugin": "^8.32.0",
		"@typescript-eslint/parser": "^8.32.0",
		"typescript": "^5.8.3",
		"eslint": "^9.26.0",
		"typescript-eslint": "^8.32.0",
		"eslint-plugin-import": "^2.29.0",
		"eslint-plugin-prettier": "^5.1.3",
        "eslint-config-airbnb-base": "^15.0.0",
		"eslint-import-resolver-typescript": "^3.6.1",
		"vitest": "^3.1.3",
		"prettier": "^3.3.1",
		"@eslint/eslintrc": "^3.3.1",
		"playwright": "^1.52.0",
		"@playwright/test": "^1.52.0",
		"jsdom": "^24.0.0",
		"esbuild": "^0.25.4",
		"builtin-modules": "5.0.0",
		"depcheck": "^1.4.7",
		"rimraf": "^6.0.1",
		"domhandler": "^5.0.3",
		"electron": "34.3.0"
	},
    "pnpm": {
        "onlyBuiltDependencies": ["esbuild", "electron"]
    },
    "depcheck": {
        "ignores": [
            "electron",
            "@eslint/js",
            "typescript-eslint",
            "rimraf",
            "eslint-import-resolver-typescript",
            "eslint-config-airbnb-base",
            "@typescript-eslint/eslint-plugin",
            "@typescript-eslint/parser"
            ,"eslint-plugin-import"
            ,"eslint-plugin-prettier"
            ,"prettier"
        ]
    }
}
